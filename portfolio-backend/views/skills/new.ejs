<%- include ('../includes/header') %>
<div class="container mt-4">
  <h1>New Skill</h1>
  <form action="/skills" method="POST">
    <div class="form-group">
      <label for="name">Skill Name</label>
      <input type="text" class="form-control" id="name" name="name" required pattern="[A-Za-z]+" title="Please enter only letters">
    </div>
    <div class="form-group">
      <label for="level">Skill description</label>
      <input type="text" class="form-control" id="description" name="description" required pattern="[A-Za-z]+" title="Please enter only letters">
    </div>
    <button type="submit" class="btn btn-primary">Add Skill</button>
  </form>
</div>
<%- include ('../includes/footer') %>
